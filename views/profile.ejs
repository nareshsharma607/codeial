<link rel="stylesheet" href="/assets/home.css">
<h1>Codeial users profile</h1>


<%if(user.id==user_profile.id){%>
    <form action="/users/update/<%=user_profile.id%>" method="POST">
    <input type="text" name="name" value="<%=user_profile.name%>" placeholder="Your Name" required>
    <input type="text" name="email" value="<%=user_profile.email%>" placeholder="Your Email" required>
    <input type="submit"  value="update">
    </form>

<%}else{%>
    <p><%=user_profile.name%></p>
    <p><%=user_profile.email%></p>
<%}%>
